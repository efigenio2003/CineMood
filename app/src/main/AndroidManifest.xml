<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Teste"
        tools:targetApi="31">

        <!-- Sua Activity Principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- VERIFIQUE SE AS LINHAS ABAIXO EXISTEM -->
        <activity android:name=".TelaFelizActivity" android:exported="false" />
        <activity android:name=".TelaTristeActivity" android:exported="false" />
        <activity android:name=".TelaBravoActivity" android:exported="false" />
        <activity android:name=".TelaEntediadoActivity" android:exported="false" />

    </application>

</manifest>
